{
  "name": "gxt-trading-agent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm dev:agent\" \"pnpm dev:ui\"",
    "dev:ui": "vite",
    "dev:agent": "tsx watch src/index.ts",
    "dev:analyze": "tsx src/cli/analyze.ts",
    "dev:score": "tsx src/cli/score.ts",
    "build": "vite build && tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "start": "NODE_ENV=production tsx src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@tanstack/react-query": "^5.62.0",
    "better-sqlite3": "^11.7.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0",
    "lightweight-charts": "^4.2.0",
    "node-cron": "^3.0.3",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "yahoo-finance2": "^2.14.0",
    "zod": "^3.24.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.16.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
